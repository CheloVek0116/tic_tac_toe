<MenuScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Играть'
            on_press: root.manager.current = 'game_menu'
        Button:
            text: 'Quit'
            on_press: app.stop()


<GameMenuScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        Button:
            text: 'На одном экране'
            on_press: root.manager.current = 'game'
        Button:
            text: 'Online'
            on_press: root.manager.current = 'online_loading'
        Button:
            text: 'Главное меню'
            on_press: root.manager.current = 'menu'


<OnlineLoadingScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDSpinner:
            size_hint: (.3, .3)
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .1}
            active: True 


<GameScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: score_text
            text: f"X  0:0  O"
            halign: "center"
            size_hint: (1, .2)
            font_size: '20sp'
            valign: 'middle'
        MDLabel:
            id: attacker_text
            text: f"Ходит X"
            halign: "center"
            valign: 'middle'
            size_hint:(1, .1)
        GridLayout:
            id: field_grid
            cols: 3

<OnlineGameScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: score_text
            text: f"X  0:0  O"
            halign: "center"
            size_hint: (1, .2)
            font_size: '20sp'
            valign: 'middle'
        MDLabel:
            id: attacker_text
            text: f"Ходит X"
            halign: "center"
            valign: 'middle'
            size_hint:(1, .1)
        GridLayout:
            id: field_grid
            cols: 3

